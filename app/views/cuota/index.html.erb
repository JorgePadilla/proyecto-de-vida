<h1>Listado de Cuotas</h1>

<table>
  <tr>
    <th>Estado</th>
    <th>Liquidacion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cuota.each do |cuotum| %>
  <tr>
    <td><%= cuotum.fecha %></td>
    <td><%= cuotum.valor %></td>
    <td><%= cuotum.valor_credito %></td>
    <td><%= cuotum.mora %></td>
    <td><%= cuotum.descuento %></td>
    <td><%= cuotum.estado %></td>
    <td><%= cuotum.liquidacion %></td>
    <td><%= link_to 'Mostrar', cuotum %></td>
    <td><%= link_to 'Editar', edit_cuotum_path(cuotum) %></td>
    <td><%= link_to 'Eliminar', cuotum, confirm: 'Esta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

