	<tr>
	  <td><%= link_to pedido.asesor.nombre,pedido.asesor %></td>
	  <td><%= pedido.evento %></td>
	  <td><%= pedido.ciudad %></td>
	  <td><%= pedido.fecha_evento %></td>
	  <td><%= pedido.nombre_cliente %></td>
